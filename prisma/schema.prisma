generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Charge {
  name         String  @unique @id
  id Int @default(autoincrement())
  viewsCount Int @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  description  String?
  companyName  String?
  website      String?
  contactWeb   String?
  contactPhone String?

  comments       Comment[]

  @@index([viewsCount])
}

model Comment {
  id        String   @id @default(uuid())
  email String @unique
  displayName String

  content String
  
  likeCounter Int?
  dislikeCounter Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  deleted Boolean @default(false)

  chargeName String
  charge   Charge @relation(fields: [chargeName], references: [name])
}
